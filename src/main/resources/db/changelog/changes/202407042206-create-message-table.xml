<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="1720143495723-2" author="Rosivaldo Lucas">
    <createTable tableName="message_tb">
      <column name="id" type="uuid">
        <constraints primaryKey="true" nullable="false" />
      </column>

      <column name="content" type="varchar(300)">
        <constraints nullable="false" />
      </column>

      <column name="status" type="varchar(20)">
        <constraints nullable="false" />
      </column>

      <column name="channel_type" type="varchar(20)">
        <constraints nullable="false" />
      </column>

      <column name="scheduled_at" type="datetime">
        <constraints nullable="false" />
      </column>

      <column name="sent_at" type="datetime">
        <constraints nullable="false" />
      </column>

      <column name="created_at" type="datetime">
        <constraints nullable="false" />
      </column>

      <column name="updated_at" type="datetime">
        <constraints nullable="false" />
      </column>

      <column name="sender_id" type="uuid">
        <constraints nullable="false" />
      </column>
    </createTable>

    <addForeignKeyConstraint
            baseTableName="message_tb"
            baseColumnNames="sender_id"
            constraintName="fk_message_sender"
            referencedTableName="user_table"
            referencedColumnNames="id"
    />
  </changeSet>

  <changeSet id="1720143504784-3" author="Rosivaldo Lucas">
    <createTable tableName="user_recipient_message_tb">
      <column name="message_id" type="uuid">
        <constraints primaryKey="true" nullable="false" />
      </column>

      <column name="recipient" type="varchar(100)">
        <constraints nullable="false" />
      </column>
    </createTable>

    <addForeignKeyConstraint
            baseTableName="user_recipient_message_tb"
            baseColumnNames="message_id"
            constraintName="fk_user_recipient_message"
            referencedTableName="message_tb"
            referencedColumnNames="id"
    />
  </changeSet>

</databaseChangeLog>
